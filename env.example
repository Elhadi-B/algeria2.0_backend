# Django Settings
# Generate a new SECRET_KEY for production using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (set to False in production)
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (default for local development - leave DATABASE_URL empty or unset)
# DATABASE_URL=

# For PostgreSQL (uncomment and configure for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/pitching_day
# Or use individual settings:
# DB_NAME=pitching_day
# DB_USER=postgres
# DB_PASSWORD=your_password_here
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration (optional - for WebSocket channel layer in production)
# Leave empty to use in-memory channel layer for local development
# REDIS_URL=redis://localhost:6379/0
REDIS_URL=

# CORS Settings (comma-separated origins)
# Leave empty to allow all origins in DEBUG mode, or specify origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8000,http://127.0.0.1:8080,http://172.20.10.3:8080

# Base URL for judge token links (used in management commands)
BASE_URL=http://localhost:8000
